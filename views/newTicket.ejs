<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>-- Work Tickets --</title>
        <!-- Compiled and minified CSS -->
        <link
            href="https://fonts.googleapis.com/icon?family=Material+Icons"
            rel="stylesheet"
        />
        <!--Import materialize.css-->
        <link
            type="text/css"
            rel="stylesheet"
            href="css/materialize.min.css"
            media="screen,projection"
        />
        <link rel="stylesheet" href="/css/styles.css">
    </head>

    <body>
        <div class="row">
            <div class="col s4 offset-s4">
                <h1 class="card-panel #ef5350 red lighten-1 center-align">
                    New Ticket
                </h1>
            </div>

            <form id="Ticket" action="/add-ticket" method="POST">
                <div class="input-field col s4 offset-s2">
                    <label>Name of Job</label>
                    <input
                        type="text"
                        placeholder="Name of Job"
                        id="nameOfJob"
                        name="nameOfJob"
                    />
                </div>
                <div class="input-field col s4">
                    <label>Client Name</label>
                    <input
                        type="text"
                        placeholder="Client Name"
                        id="clientName"
                        name="clientName"
                    />
                </div>
                <div class="input-field col s4 offset-s2">
                    <label>Location</label>
                    <input
                        type="text"
                        placeholder="Location"
                        id="location"
                        name="location"
                    />
                </div>
                <div class="input-field col s4">
                    <label>Estimated Cost $</label>
                    <input
                        type="number"
                        placeholder="Estimated Cost"
                        id="estimatedCost"
                        name="estimatedCost"
                    />
                </div>
                <div class="col s4 offset-s4">
                    <select id="status" name="status">
                        <option value="Open" selected>Open</option>
                        <option value="Closed">Closed</option>
                    </select>
                    <label for="status">Status</label>
                </div>
                <div class="col s4 offset-s4">
                    <label>Date</label>
                    <input type="date" name="date" id="date" />
                </div>
                <div class="col s8 offset-s2">
                    <label>Description</label>
                    <textarea
                        name="description"
                        id="description"
                        cols="30"
                        rows="25"
                    ></textarea>
                </div>
                <div class="col s4 offset-s4">
                    <label>Date Complete</label>
                    <input type="date" name="dateComplete" id="dateComplete" />
                </div>
                <br />
                <div class="input-field col s4 offset-s4">
                    <label>Hours Worked</label>
                    <input
                        type="number"
                        id="hoursWorked"
                        name="hoursWorked"
                        min="1"
                        max="24"
                    />
                </div>
                <div class="input-field col s4 offset-s4">
                    <label>Total Cost</label>
                    <input type="number" name="totalCost" id="totalCost" />
                </div>
                <div class="col s2 offset-s4">
                    <input type="submit" value="Save" class="btn" />
                    <a href="/" class="btn orange">Cancel</a>
                </div>
            </form>
        </div>

        <script type="text/javascript" src="js/materialize.min.js"></script>
        <script>
            M.FormSelect.init(document.querySelector('#status'))
        </script>
    </body>
</html>
