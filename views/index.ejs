<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>-- Work Tickets --</title>
        <!-- Compiled and minified CSS -->
        <!--Import Google Icon Font-->
        <link
            href="https://fonts.googleapis.com/icon?family=Material+Icons"
            rel="stylesheet"
        />
        <!--Import materialize.css-->
        <link
            type="text/css"
            rel="stylesheet"
            href="css/materialize.min.css"
            media="screen,projection"
        />
    </head>

    <body>
        <div class="row">
            <div class="col s8 offset-s2">
                <div class="card-panel green">
                    <h3>Open Tickets</h3>
                    <a
                        href="/add-ticket"
                        class="btn-floating btn-large waves-effect waves-light red"
                        ><i class="material-icons">add</i></a
                    >
                </div>
                <div class="col s8">
                    <ul class="openTickets">
                        <% for(let i=0; i < tickets.length; i++) {%>
                        <li class="tickets">
                            <% if(tickets[i].status === 'Open') {%>
                            <div class="card-panel hoverable">
                                <div class="right">
                                    <a href="#"
                                        ><i class="material-icons delete">delete</i></a
                                    >
                                </div>
                                <h4><%= tickets[i].nameOfJob %></h4>
                                <p>
                                    Filed by: <%= tickets[i].clientName %> | On:
                                    <%= moment(tickets[i].date).format("LL") %>
                                </p>
                                <h5>Description:</h5>
                                <div><%= tickets[i].description %></div>
                            </div>
                            <% } %>
                        </li>
                        <% } %>
                    </ul>
                </div>
            </div>

            <div class="divider"></div>

            <div class="col s8 offset-s2">
                <div class="card-panel red">
                    <h3>Closed Tickets</h3>
                </div>
            </div>
            <div class="col s4">
                <ul class="closedTickets"></ul>
            </div>
        </div>
        <script type="text/javascript" src="js/materialize.min.js"></script>
    </body>
</html>
