<br />
<div class="row">
  <div class="container">
    <div class="col s12 m8 offset-m2">
      <div class="card ticket">
        <div class="card-content">
          <span class="card-title">
            <h2>{{ticket.nameOfJob}}</h2>
            <span class="single-info">{{formatDate
                ticket.date
                "MMMM Do YYYY"
              }}</span>
            <br />
            <span class="single-info">Assigned to: {{ticket.assignedTo}}</span>
            <br />
            <span class="single-info">Location: {{ticket.location}}</span>
          </span>
          <span class="single-info">Description:</span>
          <br />
          {{{ticket.description}}}
          <span>Comments: {{ticket.comments}}</span>
        </div>
      </div>
    </div>
  </div>
</div>

